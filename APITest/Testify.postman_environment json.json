			"item": [
				{
					"name": "Get All Todo Entries",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();\r",
									"\r",
									"pm.test(\"confirm that title is Fusio\", function () {\r",
									"    pm.expect(jsonData.title).to.eql(\"Fusio\");\r",
									"});\r",
									"\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"pm.test(\"Status code name has OK string\", function () {\r",
									"    pm.response.to.have.status(\"OK\");\r",
									"});\r",
									"pm.environment.set(\"Wonder\", jsonData.title);\r",
									"\r",
									"pm.test(\"confirm that categories has all specified values\", function () {\r",
									"    pm.expect(jsonData.categories).to.include.members([\"authorization\", \"backened\", \"consumer\", \"default\", \"system\"]);\r",
									"});\r",
									"// Test to check if the response has a successful status code\r",
									"pm.test(\"Response status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"// Test to check if the response body is a valid JSON\r",
									"pm.test(\"Response body is a valid JSON\", function () {\r",
									"    pm.response.to.be.json;\r",
									"});\r",
									"pm.test(\"confirm that paymentCurrency is EUR \", function () {\r",
									"    pm.expect(jsonData.paymentCurrency).to.eql(\"EUR\");\r",
									"});\r",
									"pm.environment.set(\"Currency\", \"jsonData.paymentCurrency\");"
								],
